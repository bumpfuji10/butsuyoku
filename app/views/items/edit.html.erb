<h1>編集しよう！</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @item, local: true) do |f| %>
            <%= f.label :name, '欲しいもの' %>
                <%= f.text_field :name %>
                <%= f.label :price, '金額(半角で入れてね！)' %>
                <%= f.text_field :price %>
                    <%= f.label :買うタイミング %>
                    <%= f.date_select :buy_month, {
                        use_month_numbers: true,
                        start_year: (Time.now.year),
                        end_year: 2030,
                        date_separator: '/'}
                    %>
                <%= f.submit "変更する！", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
