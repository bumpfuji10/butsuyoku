<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @item, local: true) do |f| %>
            <%= render 'shared/item/error_messages' %>

            <%= f.label :name, '欲しいもの' %>
            <%= f.text_field :name %>

            <%= f.label :price, '金額(半角で入れてね！)' %>
            <%= f.text_field :price %>

                <%= f.date_select :buy_month, {
                    use_month_numbers: true,
                    start_year: (Time.now.year),
                    end_year: 2030,
                    date_separator: '/'}
                %>
                <%= f.label 'に購入' %>

            <br>
            <br><%= f.label :reason, '買う理由' %>
            <%= f.text_field :reason %>

            <%= f.submit "欲しい！", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>


