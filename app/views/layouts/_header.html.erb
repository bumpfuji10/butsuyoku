<header class="header">
    <div class="container">
        <p class="header-logo">
            <%= link_to "/" do %>
                <%= image_tag("dentaku.png", alt: "BUTSUYOKU_logo", width: "40px", id:"image-dentaku") %>BUTSUYOKU<a href="https://qiita.com/bumpfuji10"></a>
            <% end %>
        </p>
        <nav class="gnav-list">　
            <ul class="gnav-list">
                <li class="gnav-item"><%= link_to "BUTSUYOKUとは？", about_path %></li>
                <% if logged_in? %>
                    <li class="gnav-item"><%= link_to "BUTSUYOKU一覧", index_path %></li>
                    <li class="dropdown">
                        <a href="#menu" class="dropdown-toggle" data-toggle="dropdown">
                            <div class="menu">
                                アカウント <b class="caret"></b>
                            </div>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="gnav-item"><%= link_to "ログアウト", logout_path, method: :delete %></li>
                            <li class="gnav-item"><%= link_to "マイページ", current_user %>
                            <li class="divider"></li>
                        </ul>
                    </li>
                <% else %>
                    <li class="gnav-item"><%= link_to "サインアップ", signup_path %></li>
                    <li class="gnav-item"><%= link_to "ログイン", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
